{
    "node": true,
    "esnext": true,
    "bitwise": true,
    "camelcase": false,
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "quotmark": false,
    "regexp": true,
    "undef": true,
    "unused": "vars",
    "strict": true,
    "trailing": true,
    "smarttabs": true,
    "predef": [ "modules" ],
    "mocha": true,
    "expr": true,
    "globals"   : {
        "describe"   : false,
        "xdescribe"   : false,
        "it"         : false,
        "xit"         : false,
        "before"     : false,
        "beforeEach" : false,
        "after"      : false,
        "afterEach"  : false
    }
}
